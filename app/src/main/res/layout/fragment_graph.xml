<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="60dp"
    tools:context=".graph_user.Graph">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="체중 (kg)"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:fontFamily="@font/wefitfont"
                android:textSize="18dp" />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/linchart_weight"
                android:layout_width="match_parent"
                android:layout_height="200dp" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="골격근량 (kg)"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:fontFamily="@font/wefitfont"
                android:textSize="18dp" />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/linechart_muscle"
                android:layout_width="match_parent"
                android:layout_height="200dp">

            </com.github.mikephil.charting.charts.LineChart>

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="체지방률 (%)"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:fontFamily="@font/wefitfont"
                android:textSize="18dp" />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/linechart_inbodyfat"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="100dp" />
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_inbody_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="467dp"
        android:layout_marginEnd="15dp"
        android:clickable="true"
        android:contentDescription="추가하기"
        android:src="@drawable/ic_add_record"
        android:visibility="visible"
        app:backgroundTint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:maxImageSize="70dp"
        app:tint="@null" />

</androidx.constraintlayout.widget.ConstraintLayout>